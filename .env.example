# 微信群讨论总结工具配置
# 将此文件重命名为 .env 并填入实际值

# 微信登录配置
WECHATY_PUPPET=wechaty_puppet_wechat
WECHATY_PUPPET_SERVER_PORT=8080
WECHATY_TOKEN=your-wechaty-token-here

# LLM API 配置（推荐使用 DeepSeek，性价比高）
# DeepSeek API: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# 或使用 OpenAI
# OPENAI_API_KEY=your-openai-api-key-here

# 群聊配置
TARGET_GROUPS=["美股交流群1", "美股策略群"]
# 或者直接用群 ID
# GROUP_IDS=["7273788767", "1234567890"]

# 总结配置
SUMMARY_TIME="09:00"  # 每天早上 9 点总结
TIMEZONE="Asia/Shanghai"
